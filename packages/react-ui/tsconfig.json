{
	"compilerOptions": {
		"declaration": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"types": ["react"],
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"target": "ESNext",
		"module": "ESNext",
		"jsx": "react-jsx",
		"incremental": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@components/*": ["lib/components/*"],
			"@themes/*": ["lib/themes/*"]
		}
	},
	"include": ["lib/**/*.ts", "lib/**/*.tsx", "stories/**/*.tsx", "stories/**/*.mdx"],
	"exclude": ["dist", "node_modules", "src"]
}
