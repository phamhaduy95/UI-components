{
	"extends": "astro/tsconfigs/base",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": ".",
		"allowJs": true,
		"strictNullChecks": true,
		"paths": {
			"@styles/*": ["src/styles/*"],
			"@pages/*": ["src/pages/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"]
		}
	}
}
